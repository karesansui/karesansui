    helptip("#network_storage_auto_start_help",
        "${_('Auto Connect')}",
        "${_('When checked, the connection automatically at startup.')}");

% if info['auth'] == "CHAP":
    $("input:radio[name='network_storage_authentication'][value='CHAP']").click();
% else:
    $("input:radio[name='network_storage_authentication'][value='None']").click();
% endif

