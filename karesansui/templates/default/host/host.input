        <div class="grayout-footer">
            <a href="#" name="input_host_submit" id="input_host_submit" class="button">
                <span class="button-left">&nbsp;</span><span class="button-right">${_('Add')}</span>
            </a>
            <br style="clear: both;"/>
        </div>
        <br style="clear: both;"/>
    </div>
